{
  "name": "patternfly-java-showcase-j2cl",
  "private": true,
  "parcelIgnore": [
    "showcase.js"
  ],
  "source": [
    "src/web/dev.html",
    "src/web/index.html"
  ],
  "scripts": {
    "watch-j2cl": "browser-sync start --proxy http://localhost:1234 --reload-debounce 500 --files ../../target/gwt3BuildCache --no-open",
    "watch-parcel": "parcel serve src/web/dev.html --dist-dir target/showcase --open",
    "watch": "concurrently --kill-others 'npm run watch-j2cl' 'npm run watch-parcel'",
    "dev": "parcel build src/web/dev.html --dist-dir target/showcase --no-optimize",
    "prod": "parcel build src/web/index.html --dist-dir target/showcase",
    "http-server": "http-server target/showcase --ssl --cert cert.pem -o"
  },
  "devDependencies": {
    "@parcel/core": "^2.12.0",
    "@parcel/reporter-cli": "^2.12.0",
    "@parcel/resolver-glob": "^2.12.0",
    "browser-sync": "^3.0.2",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "parcel": "^2.12.0",
    "parcel-resolver-ignore": "^2.2.0"
  },
  "dependencies": {
    "@github/relative-time-element": "^4.4.0",
    "@patternfly/patternfly": "^5.3.1",
    "highlight.js": "^11.9.0",
    "showcase-common": "file:../common/local_modules/showcase-common"
  }
}
